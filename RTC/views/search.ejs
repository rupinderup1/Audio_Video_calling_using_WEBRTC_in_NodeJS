<%
for(var i=0; i < userRecord.length; i++) {
    let isFriend = false;
    for(var j=0; j < authDetail.friends.length; j++) {
        if(authDetail.friends[j]._id == userRecord[i]._id.toString()) {
            isFriend = true;
            break;
        }
    }
%>
<li class="clearfix friend_chat" data-id="<%= userRecord[i].id %>" onClick="startChat(this)">
    <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="avatar">
    <div class="about">
        <div class="name"><%= userRecord[i].name %></div>
        <!--<div class="status"> <i class="fa fa-circle offline"></i> left 7 mins ago </div>-->
    </div>
    <div class="text-right">
        <% if(isFriend) { %>
        <a href="javascript:void(0)" class="btn btn-primary" data-id="<%= userRecord[i]._id %>" onClick="doUnfriend(this)"><i class="fa fa-user-times"></i></a>
        <% } else { %>
        <a href="javascript:void(0)" class="btn btn-primary" data-id="<%= userRecord[i]._id %>" onClick="sendFriendRequest(this)"><i class="fa fa-user"></i></a>
        <% } %>
    </div>
</li>
<% } %>