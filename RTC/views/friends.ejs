<%- include('./includes/header.ejs'); %>
<%- include('./includes/navbar.ejs'); %>
<div class="container">
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card">
                <div id="plist" class="people-list">
                    <ul class="list-unstyled chat-list mt-2 mb-0">
                        <% for(var i=0; i < friends_list.length; i++) { %>
                        <li class="clearfix">
                            <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="avatar">
                            <div class="about">
                                <div class="name"><%= friends_list[i].name %></div>
                                <!--<div class="status"> <i class="fa fa-circle offline"></i> left 7 mins ago </div>-->
                            </div>
                            <div class="text-right">
                                <% if(friends_list[i].sendByMe == 0 && friends_list[i].status == "pending") { %>
                                <a href="javascript:void(0)" class="btn btn-primary" data-id="<%= friends_list[i].id %>" onClick="doAccept(this)">Accepted</a>
                                <% } %>
                                <a href="javascript:void(0)" class="btn btn-primary" data-id="<%= friends_list[i].id %>" onClick="doUnfriend(this)">Unfriend</a>
                            </div>
                        </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./includes/footer.ejs'); %>